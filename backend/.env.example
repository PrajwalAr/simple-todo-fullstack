# Todo Fullstack Backend Environment Variables
# Copy this file to .env and update the values as needed

# Database connection URL (PostgreSQL)
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://postgres:mysecretpassword@localhost:5432/todo"

# JWT secret for token signing (change this in production!)
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server port (default: 3000)
PORT=3000

# Environment mode (optional)
# NODE_ENV=development

# Database connection pool settings (optional)
# DATABASE_POOL_MAX=10
# DATABASE_POOL_MIN=2
# DATABASE_POOL_ACQUIRE=30000
# DATABASE_POOL_IDLE=10000

# Example for production deployment:
# DATABASE_URL="postgresql://prod_user:strong_password@production-db.example.com:5432/todo_prod"
# JWT_SECRET="very-long-and-complex-secret-key-generated-with-openssl-rand-base64-64"
# PORT=80
# NODE_ENV=production